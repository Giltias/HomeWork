{% extends "base.admin.html.twig" %}

{% block content %}
    <br>
    <a href="/admin">К списку пользователей</a>
    <br>
    <h1>Список всех заказов пользователя <strong>{{ orders[0].user.name }}</strong></h1>
    <table>
        <thead>
        <tr>
            <th>№ заказа</th>
            <th>Улица</th>
            <th>Дом</th>
            <th>Корпус</th>
            <th>Квартира</th>
            <th>Этаж</th>
            <th>Комментарий</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.street }}</td>
                <td>{{ order.house }}</td>
                <td>{{ order.fraction }}</td>
                <td>{{ order.room }}</td>
                <td>{{ order.floor }}</td>
                <td>{{ order.comment }}</td>
                <td>
                    <a href="/order/edit/{{ order.id }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}