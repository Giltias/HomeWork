{% extends "base.admin.html.twig" %}

{% block content %}
    <h1>Список всех пользователей</h1>
    <table>
        <thead>
        <tr>
            <th>Email</th>
            <th>Имя пользователя</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href='/user/{{ user.id }}'>{{ user.email }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.phone }}</td>
                <td>
                    <a href="/order/create/{{ user.id }}">Создать заказ</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}