{% extends "base.html.twig" %}

{% block content %}
    <div class="container h-100">
        <div class="row h-100">
            <div class="mt-5 col-md-12">
                <div class="card">
                    <h4 class="card-header bg-primary text-white">
                       <span>{{ user.login }}</span>
                        <a href="/user/logout" class="text-white float-right">Выйти из профиля</a>
                    </h4>
                    <div class="card-body">
                        <div class="container-fluid pr-0 pl-0">
                            <div class="row">
                                <div class="col-md-2">
                                    {% if avatar is null %}
                                        <img src="../../../web/uploads/camera.gif" alt="Аватарка" width="200" height="200">
                                    {% else %}
                                        <img src="{{ avatar.path }}.gif" alt="Аватарка" width="200" height="200">
                                    {% endif %}
                                    <div>
                                        <form action="/photo/upload" method="post" enctype="multipart/form-data">
                                            <input type="hidden" name="user" value="{{ user.id }}">
                                            <label class="btn btn-outline-primary btn-upload mt-1">
                                                Загрузить фото<input type="file" name="photo" onchange="this.form.submit();" hidden>
                                            </label>
                                        </form>

                                        <a href="/photo/select/form" class="btn btn-outline-primary btn-upload">Выбрать на аву</a>
                                    </div>
                                </div>

                                <div class="col-md ml-5">
                                    <form action="/user/info/update" method="post">
                                        <input type="hidden" name="user" value="{{ user.id }}">
                                            <div class="form-row">
                                                <div class="col">
                                                    <input type="text" class="form-control"
                                                           name="lastName" placeholder="Фамилия"
                                                            value="{{ user.lastname }}">
                                                </div>
                                                <div class="col">
                                                    <input type="text" class="form-control"
                                                           name="firstName" placeholder="Имя"
                                                           value="{{ user.firstname }}">
                                                </div>
                                                <div class="col">
                                                    <input type="text" class="form-control"
                                                           name="midName" placeholder="Отчество"
                                                           value="{{ user.midname }}">
                                                </div>
                                            </div>
                                        <div class="form-row mt-3">
                                            <div class="col">
                                                <input type="date" class="form-control"
                                                       name="birthDate" value="{{ user.birthdate }}">
                                            </div>
                                        </div>
                                        <div class="form-row mt-3">
                                            <div class="col">
                                                <label for="description">Описание</label>
                                                <textarea class="form-control" name="description" id="description">{{ user.description }}</textarea>
                                            </div>
                                        </div>
                                        <div class="text-right mt-3">
                                            <input type="submit" class="btn btn-primary " value="Внести изменения">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
