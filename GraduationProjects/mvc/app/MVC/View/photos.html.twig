{% extends "base.html.twig" %}

{% block content %}
    <div class="container h-100">
        <div class="row h-100">
            <div class="mt-5 col-md-12">
                <div class="card">
                    <h4 class="card-header">
                        Выберите новую аватарку
                    </h4>
                    <div class="card-body">
                        <form action="/photo/select/save" method="post">
                            <div class="container">
                                {% for photo in photos %}
                                    <div class="row mt-3">
                                        <div class="col-1">
                                            <div class="d-flex justify-content-center h-100">
                                                <input type="radio" name="avatar" value="{{ photo.id }}" class="form-control align-self-center">
                                            </div>
                                        </div>
                                        <div class="col-11">
                                            <img src="{{ photo.path }}.gif" alt="" width="32" height="32">
                                        </div>
                                    </div>
                                {% endfor %}
                                <div>
                                    <input type="submit" class="btn btn-primary mt-3" value="Сохранить">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
